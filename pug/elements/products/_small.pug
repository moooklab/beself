div.small_product
    div.image
        img(src="images/products/1.webp", alt="")
    div.description
        h4 Лосины PUSH-UP малиновые PARADISO
        span.article Арт: 04400210
        div.color
            span(style="background-color: #241D13")
            span Чёрный|M
        div.price
            strong 1 145 ₽
            div.quantity
                div.minus
                    include ../../../images/quantity_minus.svg
                input(type="number" value="1" min="1" max="100")
                div.plus
                    include ../../../images/quantity_plus.svg
    div.controls
        a(onclick="this.classList.toggle('active')").favourite
            include ../../../images/favourite.svg
        a.trash
            include ../../../images/trash.svg