                            span 2XS
                        label
                            input(type="radio", name="productSize", value="XS")
                            span XS
                        label
                            input(type="radio", name="productSize", value="S")
                            span S
                        label
                            input(type="radio", name="productSize", value="M")
                            span M
                        label
                            input(type="radio", name="productSize", value="L")
                            span L
                        label
                            input(type="radio", name="productSize", value="XL")
                            span XL
                        label
                            input(type="radio", name="productSize", value="2XL")
                            span 2XL
                        label
                            input(type="radio", name="productSize", value="3XL")
                            span 3XL

                div.buttons
                    button(onclick="dialog.remove()").incart.gray
                        include ../../../images/product/cart.svg
                        span В корзину
                    button.buy(onclick="createDialog('buy')").border Быстрый заказ

